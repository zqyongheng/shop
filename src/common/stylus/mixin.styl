border-1px($color)
	position:relative
	&.bottom:after,&.top:before
		display:block
		position:absolute
		left:0
		width:100%
		border-top:1px solid $color
		content:''
	&.top:before
		top:0
	&.bottom:after
		bottom:0

border-none()
	&:after
		display:none		
